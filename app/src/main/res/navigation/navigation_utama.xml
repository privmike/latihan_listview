<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_utama"
    app:startDestination="@id/homeFragment"> <!-- ini untuk nunjukan startnya awalnya darimana , bisa diubah2 !-->

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.kelas_navigation_component.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.kelas_navigation_component.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_detailProfileFragment2"
            app:destination="@id/detailProfileFragment"
            app:enterAnim="@android:anim/fade_in" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.kelas_navigation_component.SettingFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/detailProfileFragment"
        android:name="com.example.kelas_navigation_component.DetailProfileFragment"
        android:label="detail profile"
        tools:layout="@layout/fragment_detail_profile" />
</navigation>